<% if @movie.errors.any? %>
	<% @movie.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
<% end %>

<%= form_for @movie do |f| %>
	<div>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
		<div>
		<%= f.label :year_released %><br />
		<%= f.text_field :year_released %>
	</div>
	<%= f.submit %>
<% end %>